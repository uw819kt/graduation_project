<p style="color: green"><%= notice %></p>

<h1>Paid leaves</h1>

<%= Date.today.strftime("%Y年%m月%d日") %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Joining</th>
      <th>Basis</th>
      <th>Possession</th>
      <th>Plan</th>
      <th>Achievements</th>
      <% (4..12).each do |month| %>
        <th><%= month %>月</th>
      <% end %>
      <% (1..3).each do |month| %>
        <th><%= month %>月</th>
      <% end %>
    </tr>
  </thead>

<tbody>
  <% @paid_leafe.each do |paid_leafe|%>
    <tr>
      <td><%= paid_leafe.id %></td>
      <td><%= paid_leafe.user.name %></td>
      <td><%= paid_leafe.joining_date.strftime("%Y年%m月%d日") %></td>
      <td><%= paid_leafe.base_date.strftime("%Y年%m月%d日") %></td>
      <td><%= @plan %></td>
      <td><%= @plan %></td>
      <td><%= @achievements %></td>

      <% (4..12).each do |month| %>
        <td>
          <%= @items[month.to_f] || 0 %>
        </td>
      <% end %>
      
      <% (1..3).each do |month| %>
        <td>
          <%= @items[month.to_f] || 0 %>
        </td>
      <% end %>
    
      <td><%= link_to "Show paid_leave", paid_leafe_path(paid_leafe.id) %></td>
    </tr>
  <% end %>
</tbody>
</table>

<br>






