<h1><%= t('addition.Editing Paid Leave') %></h1>

<%= form_with(model: @paid_leafe) do |form| %>
  <% if @paid_leafe.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@paid_leafe.errors.count, "error") %> prohibited this paid_leafe from being saved:</h2>

      <ul>
        <% @paid_leafe.errors.each do |error| %>
          <li><%= error.full_message %></li>
