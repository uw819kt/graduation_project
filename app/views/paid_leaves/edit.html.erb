    </div>

    <div>
      <%= approval_form.label :paid_remarks %>
      <%= approval_form.text_area :paid_remarks, class: "form-control" %>
    </div>
    
    <div>
      <%= approval_form.label :paid_applicable %>
      <%= approval_form.check_box :paid_applicable %>
    </div>

    <div>
      <%= approval_form.submit class: "btn btn-outline-primary mt-4" %>
    </div>
  <% end %>
<% end %>


