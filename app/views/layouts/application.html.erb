<!DOCTYPE html>
<html>
  <head>
    <title>TrackEase</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %><!-- エラー出るためコメントアウト→解除 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <%= link_to t('addition.nav.admin user index'), admin_users_path %>
          <%= link_to t('addition.nav.admin user new'), new_admin_user_path %>
          <%= link_to t('addition.nav.alcohole log index'), alcohol_logs_path %>
          <%= link_to t('addition.nav.alcohole log new'), new_alcohol_log_path %>
          <%= link_to t('addition.nav.paid leave new'), new_paid_leafe_path %>
          <%= link_to t('addition.nav.paid leave index'), paid_leaves_path %>
          <%= button_to t('addition.nav.log out'), destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to "alcohole log index", alcohol_logs_path %>
          <%= link_to "alcohole log new", new_alcohol_log_path %>
          <%= link_to "alcohole log show", alcohol_log_path(id: AlcoholLog.ids) %>
          <%= link_to "paid leave new", new_paid_leafe_path %>
          <%= link_to "paid leave index", paid_leaves_path %>
          <%= button_to "log out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
        <% end %>
      <% end %>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
